prepare_waterfront() {
    local key=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | head -c 32 | base64)
    cat > /var/operos/manifests/05-waterfront-secret.yml <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: waterfront-session-key
  namespace: operos
type: Opaque
data:
  session-key: ${key}
EOF
}

prepare_ceph() {
    local ceph_cadmin_key=$(ceph auth get-key client.admin | base64)
    local ceph_kube_client_key=$(ceph --cluster ceph auth get client.kube | grep "key =" | sed -e "s/key = //" | base64)

    ceph --cluster ceph osd pool create kube 128 128

    cat > /var/operos/manifests/05-ceph-admin-key.yml <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: ceph-admin-key
  namespace: kube-system
type: kubernetes.io/rbd
data:
  key1: ${ceph_cadmin_key}
EOF

    cat > /var/operos/manifests/05-ceph-secret-kube.yml <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: ceph-secret-kube
  namespace: default
type: kubernetes.io/rbd
data:
  key1: ${ceph_kube_client_key}
EOF
}

mkdir -p /var/operos/manifests

prepare_waterfront
prepare_ceph

systemctl disable prepare-addons.service
